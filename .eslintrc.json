{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier", "unused-imports"],
  "rules": {
    "prettier/prettier": "error",
    // Auto-fixable JavaScript/TypeScript rules
    "prefer-const": "error",
    "no-var": "error",
    "curly": ["error", "all"],
    "eqeqeq": ["error", "always"],
    "no-console": "warn",
    // TypeScript specific auto-fixable rules
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports",
        "fixStyle": "separate-type-imports"
      }
    ],
    // Code quality (auto-fixable)
    "object-shorthand": "error",
    "prefer-template": "error",
    "prefer-arrow-callback": "error",
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      }
    ],
    // Import organization (auto-fixable with plugin)
    "sort-imports": [
      "error",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ]
  },
  "ignorePatterns": ["dist/", "node_modules/", "coverage/", "*.js", ".github/"]
}
