# ==============================================
# ALTUS 4 ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and update with your actual values
# Do NOT commit .env to version control

# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3000

# ==============================================
# DATABASE CONFIGURATION (Primary - Metadata Storage)
# ==============================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=altus4_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=altus4

# Database Pool Settings (optional - defaults provided)
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# ==============================================
# REDIS CONFIGURATION (Caching & Analytics)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_URL=redis://localhost:6379  # Alternative: full Redis URL

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT secret MUST be at least 32 characters long
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_32_characters_required
JWT_EXPIRES_IN=7d

# Encryption key for database credentials (32 bytes)
ENCRYPTION_KEY=your_32_character_encryption_key_for_database_credentials_storage

# ==============================================
# AI INTEGRATION (OpenAI)
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# CORS CONFIGURATION
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
# Available levels: error, warn, info, http, verbose, debug, silly

# ==============================================
# DEVELOPMENT/DEBUGGING
# ==============================================
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_REQUEST_LOGGING=true

# ==============================================
# OPTIONAL FEATURES
# ==============================================
# Claude Code Integration
CLAUDE_CODE_ENABLE_TELEMETRY=0
CLAUDE_CODE_ENABLE_NOTIFICATIONS=0

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# ==============================================
# PRODUCTION OVERRIDES (uncomment for production)
# ==============================================
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_QUERY_LOGGING=false
# ENABLE_PERFORMANCE_MONITORING=false
# JWT_EXPIRES_IN=24h

# ==============================================
# MONITORING & METRICS (optional)
# ==============================================
# ENABLE_METRICS=true
# METRICS_PORT=9090
# METRICS_PATH=/metrics

# ==============================================
# EMAIL CONFIGURATION (future feature)
# ==============================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=noreply@altus4.dev
