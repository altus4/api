# Altus 4 Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Primary - for metadata storage)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=altus4_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=altus4_metadata

# Redis Configuration (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters_required
ENCRYPTION_KEY=your_encryption_key_for_database_credentials_32_bytes_hex_encoded

# OpenAI Integration (for AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Default local development servers are included automatically:
# - http://localhost:5173 (Vite)
# - http://localhost:3000 (React/Next.js)
# - http://localhost:3001 (Alternative dev port)
# - http://localhost:4173 (Vite preview)
# - http://localhost:8080 (Vue CLI)
# - http://127.0.0.1:5173 and http://127.0.0.1:3000 (localhost aliases)
# Add any additional origins (production domains, etc.) here:
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Database Pool Settings (optional fine-tuning)
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Security
BCRYPT_ROUNDS=12

# Development/Testing
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
